<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <record id="io_exit_permissions_tree_io" model="ir.ui.view">
            <field name="name">io.exit.permissions.tree.io</field>
            <field name="model">io.exit.permissions</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                    <tree string="أذونات الخروج"
                        decoration-bf="sorted == False">
                            <field name="exit_id"/>
                             <field name="employee_id"/>
                             <field name="exit_dt"/>
                             <field name="sorted" invisible="1"/>
                    </tree>
            </field>
        </record>
        <record id="io_exit_permissions_form_io" model="ir.ui.view">
            <field name="name">io.exit.permissions.form.io</field>
            <field name="model">io.exit.permissions</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="أذن الخروج">
                    <header>
                             <button name="action_set_exit_draft" string="Set as A Draft" type="object" states="sent,cancel"
                                class="oe_highlight" groups="io_mia_hr.group_mia_hr"/>
                             <button name="action_send_exit_permission" string="Send" type="object" states="draft"
                                class="oe_highlight" groups="io_mia_hr.group_mia_hr"/>
                             <button name="action_accept_exit_permission" string="Confirm" type="object" states="sent"
                                class="oe_highlight" groups="io_mia_hr.group_mia_hr"/>
<!--                             <button name="action_cancel_exit_permission" string="Cancel" type="object"-->
<!--                                     special="cancel" class="btn-secondary"/>  states="draft"-->
                                      <button string="Cancel" class="btn-secondary" special="cancel"
                                              groups="io_mia_hr.group_mia_hr" states="draft"/>
                            <field name="state" widget="statusbar"
                                   statusbar_visible="draft,sent,cancel,done" readonly="1"/>
                    </header>
                    <sheet>
                        <group cols="">
                        <group name="بيانات الأذن">
                         <field name="exit_id"/>
                         <field name="employee_id"/>
                         <field name="exit_dt"/>
                        </group>
                        </group>
                    </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh':'recipients'}"/>
                </div>
                </form>
            </field>
        </record>
</odoo>

