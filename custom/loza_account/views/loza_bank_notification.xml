<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="loza_bank_notification_tree_view" model="ir.ui.view">
        <field name="name">loza.bank.notification.tree.view</field>
        <field name="model">loza.bank.notification</field>
        <field name="arch" type="xml">
            <tree string="الأشعارات">
                <field name="internal_id"/>
                <field name="amount"/>
                <field name="payment_date"/>
                <field name="partner_id"/>
                <field name="state"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>


    <record id="loza_bank_notification_form_view" model="ir.ui.view">
        <field name="name">loza.bank.notification.tree.view</field>
        <field name="model">loza.bank.notification</field>
        <field name="arch" type="xml">
            <form string="الأشعار">
                <header>
                    <button name="action_confirm_internal" string="Post Notification" type="object"
                            class="oe_highlight" states="draft"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,accounts,posted" readonly="1"/>

                </header>
                <sheet>
                    <div class="oe_left" style="width: 500px;">
                        <div class="oe_title" style="width: 390px;">
                            <label class="oe_edit_only" for="internal_id"
                                   string="الأشعار #"/>
                            <h1>
                                <field name="internal_id" class="oe_inline"/>
                            </h1>
                        </div>
                    </div>
                    <group cols="">
                    <group>
                        <field name="internal_type"/>
                    </group>
                    <group name="Payment Information">
                        <field name="partner_id"/>
                        <field name="payment_date"/>
                        <field name="addition_date"/>
                    </group>
                    <group string="Transaction Details">
                        <field name="amount"/>
                        <field name="total_string" readonly="1"/>
                        <field name="currency_id" invisible="1"/>
                    </group>
                    <group string="Items" colspan="2">
                        <field name="transaction_ids"/>
                    </group>
                    <group string="Attachments" colspan="2">
                        <field name="attachment_ids"/>
                    </group>
                    <group string="Recepient Details">
                        <field name="recepient_id"/>
                        <field name="prepare_id_jobtitle"/>
                    </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_follower"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>

        </field>
    </record>
</odoo>