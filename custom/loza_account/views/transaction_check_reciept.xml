<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="transaction_check_reciept_tree_view" model="ir.ui.view">
        <field name="name">transaction.check.reciept.tree.view</field>
        <field name="model">transaction.check.reciept</field>
        <field name="arch" type="xml">
            <tree string="Checks Transaction">
                <field name="check_id"/>
                 <field name="description"/>
                <field name="check_no"/>
               <field name="amount"/>
                        <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>
    <record id="transaction_check_reciept_form_view" model="ir.ui.view">
         <field name="name">transaction.check.reciept.form.view</field>
        <field name="model">transaction.check.reciept</field>
        <field name="arch" type="xml">
            <form string="Check Transaction Details">
                <sheet>
                    <div>

                            <label class="oe_edit_only" for="check_id"
                                   string="Transaction ID #"/>
                            <h1>
                                <field name="check_id" class="oe_inline"/>
                            </h1>
                    </div>
                    <group>
                        <group string="Details">
                            <field name="description"/>
                            <field name="amount"/>
                            <field name="check_no"/>
                            <field name="check_date"/>
                        <field name="currency_id" invisible="1"/>
                        </group>
                          <group string="Accounts">
                            <field name="credit_account_id"/>
                            <field name="debit_account_id"/>
                        </group>
                    </group>
                </sheet>
            </form>

        </field>
    </record>
</odoo>