<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="loza_pitty_cash_tree_view" model="ir.ui.view">
        <field name="name">loza.pitty.cash.tree.view</field>
        <field name="model">loza.pitty.cash</field>
        <field name="arch" type="xml">
            <tree string="العهد مالية">
                <field name="pittycash_id"/>
                <field name="employee_id"/>
                <field name="balance"/>
                <field name="max_limit"/>
                <field name="journal_id"/>
                <field name="account_id"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="loza_pitty_cash_form_view" model="ir.ui.view">
        <field name="name">loza.pitty.cash.form.view</field>
        <field name="model">loza.pitty.cash</field>
        <field name="arch" type="xml">
            <form string="عهدة مالية">
                <sheet>
                    <div class="oe_left" style="width: 500px;">
                        <div class="oe_title" style="width: 390px;">
                            <label class="oe_edit_only" for="pittycash_id"
                                   string="Pitty Cash #"/>
                            <h1>
                                <field name="pittycash_id" class="oe_inline"/>
                            </h1>
                        </div>
                    </div>
                    <group cols="">
                    <group name="Pitty Cash Information">
                        <field name="pittycash_id"/>
                        <field name="name"/>
                        <field name="employee_id"/>
                        <field name="partner_id"/>
                        <field name="balance"/>
                        <field name="max_limit"/>
                        <field name="journal_id"/>
                        <field name="account_id"/>
                        <field name="currency_id" invisible="1"/>
                    </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_follower"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>
    <record id="action_loza_pitty_cash" model="ir.actions.act_window">
        <field name="name">Pitty Cash</field>
        <field name="res_model">loza.pitty.cash</field>
        <field name="binding_view_types">tree</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
