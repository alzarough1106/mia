<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="loza_loan_tree_view" model="ir.ui.view">
        <field name="name">loza.loan.tree.view</field>
        <field name="model">loza.loan</field>
        <field name="arch" type="xml">
            <tree string="السلف مالية">
                <field name="loan_id"/>
                <field name="employee_id"/>
                <field name="amount"/>
                <field name="journal_id"/>
                <field name="account_id"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="loza_loan_form_view" model="ir.ui.view">
        <field name="name">loza.loan.form.view</field>
        <field name="model">loza.loan</field>
        <field name="arch" type="xml">
            <form string="سلفة مالية">
                <sheet>
                    <div class="oe_left" style="width: 500px;">
                        <div class="oe_title" style="width: 390px;">
                            <label class="oe_edit_only" for="loan_id"
                                   string="Loan #"/>
                            <h1>
                                <field name="loan_id" class="oe_inline"/>
                            </h1>
                        </div>
                    </div>
                    <group cols="">
                    <group name="Loan Information">
                        <field name="loan_id"/>
                        <field name="name"/>
                        <field name="employee_id"/>
                        <field name="amount"/>
                        <field name="journal_id"/>
                        <field name="account_id"/>
                        <field name="currency_id" invisible="1"/>
                    </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_follower"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>
    <record id="action_loza_loan" model="ir.actions.act_window">
        <field name="name">Loans</field>
        <field name="res_model">loza.loan</field>
        <field name="binding_view_types">tree</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
