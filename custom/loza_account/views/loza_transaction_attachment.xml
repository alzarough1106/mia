<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="loza_transaction_attachment_tree_view" model="ir.ui.view">
        <field name="name">loza.transaction.attachment.tree.view</field>
        <field name="model">loza.transaction.attachment</field>
        <field name="arch" type="xml">
            <tree string="Attachments">
                <field name="attachment_id"/>
                <field name="description"/>
                <field name="file" widget="binary" readonly="1" force_save="1"/>
            </tree>
        </field>
    </record>

    <record id="loza_transaction_attachment_form_view" model="ir.ui.view">
        <field name="name">loza.transaction.attachment.form.view</field>
        <field name="model">loza.transaction.attachment</field>
        <field name="arch" type="xml">
            <form string="Attachment">
                <sheet>
                    <group>
                        <group>
                            <field name="description"/>
                            <field name="file"/>
                        </group>
                    </group>
                </sheet>
            </form>

        </field>
    </record>
</odoo>