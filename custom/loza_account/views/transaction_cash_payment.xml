<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="transaction_cash_payment_tree_view" model="ir.ui.view">
        <field name="name">transaction.cash.payment.tree.view</field>
        <field name="model">transaction.cash.payment</field>
        <field name="arch" type="xml">
            <tree string="Transaction Details">
                <field name="transaction_id"/>
                 <field name="description"/>
                <field name="amount"/>
                        <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="transaction_cash_payment_form_view" model="ir.ui.view">
         <field name="name">transaction.cash.payment.form.view</field>
        <field name="model">transaction.cash.payment</field>
        <field name="arch" type="xml">
            <form string="Transaction Details">
                <sheet>
                    <div>
                            <label class="oe_edit_only" for="transaction_id"
                                   string="Transaction ID #"/>
                            <h1>
                                <field name="transaction_id" class="oe_inline"/>
                            </h1>
                    </div>
                    <group>
                        <group string="Details">
                            <field name="state" invisible="1"/>
                            <field name="description"  attrs="{'readonly': [ ('state', '!=', 'open')]}"/>
                            <field name="amount" attrs="{'readonly': [ ('state', '!=', 'open')]}"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group string="Accounts">
                            <field name="credit_account_id" attrs="{'readonly': [ ('state', '=', 'locked')]}"/>
                            <field name="debit_account_id" attrs="{'readonly': [ ('state', '=', 'locked')]}"/>
                        </group>
                    </group>
                </sheet>
            </form>

        </field>
    </record>
</odoo>