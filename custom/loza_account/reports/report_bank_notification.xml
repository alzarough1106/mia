    <template id="report_bank_notification">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.partner_id.lang"/>
                <t t-call="loza_account.report_bank_notification_call" t-lang="lang"/>
            </t>
        </t>
    </template>

    <report
            string="طباعة الأشعار"
            id="loza_account.bank_notification_report"
            model="loza.bank.notification"
            report_type="qweb-pdf"
            name="loza_account.report_bank_notification"
            file="loza_account.report_bank_notification"
    />
