<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_bank_notification_call">
        <t t-call="web.external_layout" t-value="o.with_context(lang=lang)">
            <div class="page" dir="rtl">
                <h3 align="right">
                    <strong>الأشعار :
                        <span t-field="o.internal_id"/>
                    </strong>
                </h3>
                <p style="height: 20px;"></p>
                <table class="table table-borderless m-0">
                    <tbody>
                        <tr>
                            <td class="pl-0 pr-0">
                                <h2 t-if="o.internal_type=='positive'">أشعار إضافة</h2>
                                <h2 t-if="o.internal_type=='negative'">أشعار خصم</h2>
                                <table class="table table-borderless">
                                    <tr>
                                        <td class="p-0 w-25" align="left" style="margin: 5px;">
                                            اسم الجهة :
                                        </td>
                                        <td class="p-0 w-25" align="right">
                                            <span class="d-block font-weight-bold" t-field="o.partner_id"/>
                                        </td>
                                        <td class="p-0 w-25" align="left" style="margin: 5px;">
                                            تاريخ المعاملة :
                                        </td>
                                        <td class="p-0 w-25" align="right">
                                            <span class="d-block font-weight-bold" t-field="o.payment_date"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="p-0 w-25" align="left" style="margin: 5px;">
                                            تاريخ الإضافة :
                                        </td>
                                        <td class="p-0 w-25" align="right">
                                            <span class="d-block font-weight-bold" t-field="o.addition_date"/>
                                        </td>
                                        <td class="p-0 w-25" align="left" style="margin: 5px;">
                                        </td>
                                        <td class="p-0 w-25" align="right">
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <p style="height: 20px;"></p>
                <div align="right">
                    <table class="table table-lg m-0 p-0 table-borderless border border-right-0 border-left-0 border-info">
                        <tbody>
                            <tr>
                                <td class="pt-0 pb-0 pl-0 pr-0">
                                    <table class="table table-borderless m-0 p-0">
                                        <tr>
                                            <td class="p-0 w-50">
                                                <span class="font-weight-bold">
                                                البيان
                                                </span>
                                            </td>
                                             <td class="p-0 w-50">
                                                <span class="font-weight-bold">
                                                القيمة
                                                </span>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <table class="table table-borderless m-0">
                        <tbody>
                            <tr t-foreach="o.transaction_ids" t-as="line" class="pb-2">
                                <td class="pl-0 pr-0">
                                    <table class="table table-borderless">
                                        <tr>
                                            <td class="p-0 w-50" style="margin: 0px; padding: 0px;">
                                                <span class="d-block" t-field="line.description"/>
                                            </td>
                                            <td class="p-0 w-50" style="margin: 0px; padding: 0px;">
                                                <span class="d-block" t-field="line.amount"/>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <table class="table table-lg m-0 table-borderless border border-right-0 border-left-0 border-info">
                        <tbody>
                            <tr>
                                <td class="pt-2 pb-2 pl-0 pr-0">
                                    <table class="table table-borderless m-0">
                                        <tr>
                                            <td class="p-0 w-25" align="left">
                                                <span class="d-block">
                                                    الإجمالي :
                                                </span>
                                            </td>
                                            <td class="p-0 w-75" align="right" dir="rtl" colspan="3">
                                                <strong>
                                                    <span dir="rtl" class="d-block font-weight-bold"
                                                          t-field="o.amount"/>
                                                </strong>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="p-0 w-25" align="left">
                                                <span class="d-block">
                                                    الإجمالي بالحروف :
                                                </span>
                                            </td>
                                            <td class="p-0 w-75" align="right" dir="rtl" colspan="3">
                                                <strong>
                                                    <span dir="rtl" class="d-block font-weight-bold"
                                                          t-field="o.total_string"/>
                                                </strong>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <p style="height: 20px;"></p>
                    <table class="table table-borderless" style="padding-top: 10px;">
                        <tr>
                            <td>
                                أسم المستلم :
                                <strong>
                                    <span dir="rtl" class="font-weight-bold" t-field="o.recepient_id"/>
                                </strong>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                الصفة الوظيفية :
                                <strong>
                                    <span dir="rtl" class="font-weight-bold" t-field="o.prepare_id_jobtitle"/>
                                </strong>
                            </td>
                        </tr>
                    </table>
                    <p style="height: 20px;"></p>
                </div>
            </div>
        </t>
