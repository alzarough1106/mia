    <template id="reciept_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="ar_LY"/>
                <t t-if="o.kabad_type == 'cash'">
                    <t t-call="loza_account.report_reciept_call" t-lang="lang"/>
                </t>
                <t t-if="o.kabad_type == 'check'">
                    <t t-call="loza_account.report_reciept_check_call" t-lang="lang"/>
                </t>
            </t>
        </t>
    </template>

    <report
            string="طباعة إذن القبض"
            id="loza_account.reciept_report"
            model="loza.reciept.approval"
            report_type="qweb-pdf"
            name="loza_account.report_reciept"
            file="loza_account.report_reciept"
    />
